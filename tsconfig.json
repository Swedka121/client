{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@stores/*": ["stores/*"]
    },
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  }
}
